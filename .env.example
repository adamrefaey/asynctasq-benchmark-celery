# AsyncTasQ vs Celery Benchmarking Suite - Environment Variables
# Copy this file to .env and modify as needed

# ============================================================================
# Redis Database Separation (CRITICAL)
# ============================================================================
# AsyncTasQ and Celery MUST use different Redis databases to avoid workers
# processing each other's tasks when running in parallel.

# AsyncTasQ Configuration (Redis DB 0)
ASYNCTASQ_DRIVER=redis
ASYNCTASQ_REDIS_URL=redis://localhost:6379/0
ASYNCTASQ_REDIS_PASSWORD=
ASYNCTASQ_REDIS_DB=0
ASYNCTASQ_REDIS_MAX_CONNECTIONS=10

# Celery Configuration (Redis DB 1 & 2)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ============================================================================
# Benchmarking Configuration
# ============================================================================

# Number of repetitions per scenario (default: 10)
BENCHMARK_RUNS=10

# Worker count (overridden per scenario)
BENCHMARK_WORKERS=10

# Warm-up period before metrics collection (seconds)
BENCHMARK_WARMUP_SECONDS=30

# Output directory for CSV/JSON results
BENCHMARK_OUTPUT_DIR=./results

# Timeout for each benchmark run (seconds)
BENCHMARK_TIMEOUT_SECONDS=300

# ============================================================================
# Monitoring (Optional)
# ============================================================================

# Prometheus server port
PROMETHEUS_PORT=9090

# Grafana server port
GRAFANA_PORT=3000

# Grafana admin credentials
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin

# ============================================================================
# Mock API (Required for Scenarios 2, 4, 7)
# ============================================================================

# Mock API server configuration
MOCK_API_PORT=8080
MOCK_API_WORKERS=4
MOCK_API_LOG_LEVEL=warning
